<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    <aspNetCore processPath="dotnet" arguments=".\dernekWeb.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
    
    <!-- ModSecurity Configuration for API -->
    <rewrite>
      <rules>
        <rule name="Allow API Methods" stopProcessing="true">
          <match url="^api/.*" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="^(DELETE|PUT|POST|GET)$" />
          </conditions>
          <action type="None" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
